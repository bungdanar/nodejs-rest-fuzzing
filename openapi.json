{
  "openapi": "3.0.3",
  "info": {
    "title": "RESTful API for Fuzzing",
    "version": "1.0",
    "description": "OpenAPI spec for Experimental RESTful API for Fuzzing",
    "contact": {
      "name": "Danar Gumilang Putera",
      "email": "danar.g.putera@gmail.com",
      "url": "https://github.com/bungdanar/nodejs-rest-fuzzing"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/license/mit/"
    }
  },
  "servers": [
    {
      "url": "http://localhost:5000/api",
      "description": "Experimental RESTful API Server for Fuzzing"
    }
  ],
  "externalDocs": {
    "url": "https://github.com/bungdanar/nodejs-rest-fuzzing",
    "description": "Experimental RESTful API Server Written in NodeJs"
  },
  "paths": {
    "/product": {
      "post": {
        "tags": [
          "Product"
        ],
        "summary": "Create New Product",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProductCreatePayload"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successfully create new product",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ProductCreatePayload": {
        "type": "object",
        "required": [
          "name",
          "sku",
          "regular_price",
          "discount_price",
          "quantity",
          "description",
          "weight",
          "note"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 255
          },
          "sku": {
            "type": "string",
            "minLength": 3,
            "maxLength": 255
          },
          "regular_price": {
            "type": "number",
            "format": "float",
            "minimum": 0
          },
          "discount_price": {
            "type": "number",
            "format": "float",
            "minimum": 0
          },
          "quantity": {
            "type": "integer",
            "format": "int32",
            "minimum": 0,
            "maximum": 9999
          },
          "description": {
            "type": "string",
            "minLength": 3,
            "maxLength": 1000
          },
          "weight": {
            "type": "number",
            "format": "float",
            "minimum": 0,
            "maximum": 1000
          },
          "note": {
            "type": "string",
            "minLength": 3,
            "maxLength": 255
          },
          "published": {
            "type": "boolean",
            "default": false
          }
        }
      },
      "TagsCreatePayload": {
        "type": "array",
        "items": {
          "type": "string",
          "minLength": 3,
          "maxLength": 255
        }
      },
      "CategoryCreatePayload": {
        "type": "object",
        "required": [
          "name",
          "description"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 255
          },
          "description": {
            "type": "string",
            "minLength": 3,
            "maxLength": 1000
          }
        }
      },
      "CouponCreatePayload": {
        "type": "object",
        "required": [
          "code",
          "description",
          "discount_value",
          "discount_type",
          "max_usage",
          "start_date",
          "end_date"
        ],
        "properties": {
          "code": {
            "type": "string",
            "minLength": 3,
            "maxLength": 255
          },
          "description": {
            "type": "string",
            "minLength": 3,
            "maxLength": 1000
          },
          "discount_value": {
            "type": "number",
            "format": "float",
            "minimum": 0,
            "maximum": 100
          },
          "discount_type": {
            "type": "string",
            "minLength": 3,
            "maxLength": 255
          },
          "times_used": {
            "type": "integer",
            "format": "int32",
            "minimum": 0,
            "default": 0
          },
          "max_usage": {
            "type": "integer",
            "format": "int32",
            "minimum": 0
          },
          "start_date": {
            "type": "string",
            "format": "date-time"
          },
          "end_date": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "ProductTagCategoryCreatePayload": {
        "type": "object",
        "required": [
          "tags",
          "category"
        ],
        "allOf": [
          {
            "$ref": "#/components/schemas/ProductCreatePayload"
          }
        ],
        "properties": {
          "tags": {
            "$ref": "#/components/schemas/TagsCreatePayload"
          },
          "category": {
            "$ref": "#/components/schemas/CategoryCreatePayload"
          }
        }
      },
      "ProductTagCategoryCouponCreatePayload": {
        "type": "object",
        "required": [
          "tags",
          "categories",
          "coupons"
        ],
        "allOf": [
          {
            "$ref": "#/components/schemas/ProductCreatePayload"
          }
        ],
        "properties": {
          "tags": {
            "$ref": "#/components/schemas/TagsCreatePayload"
          },
          "categories": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CategoryCreatePayload"
            }
          },
          "coupons": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CouponCreatePayload"
            }
          }
        }
      },
      "TagResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "CategoryResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "active": {
            "type": "boolean"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "CouponResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "code": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "discount_value": {
            "type": "number",
            "format": "float"
          },
          "discount_type": {
            "type": "string"
          },
          "times_used": {
            "type": "integer",
            "format": "int32"
          },
          "max_usage": {
            "type": "integer",
            "format": "int32"
          },
          "start_date": {
            "type": "string",
            "format": "date-time"
          },
          "end_date": {
            "type": "string",
            "format": "date-time"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "ProductResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string"
          },
          "sku": {
            "type": "string"
          },
          "regular_price": {
            "type": "number",
            "format": "float"
          },
          "discount_price": {
            "type": "number",
            "format": "float"
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          },
          "description": {
            "type": "string"
          },
          "weight": {
            "type": "number",
            "format": "float"
          },
          "note": {
            "type": "string"
          },
          "published": {
            "type": "boolean"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "ProductTagCategoryResponse": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/ProductResponse"
          }
        ],
        "properties": {
          "tags": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TagResponse"
            }
          },
          "categories": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CategoryResponse"
            }
          }
        }
      },
      "ProductTagCategoryCouponResponse": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/ProductTagCategoryResponse"
          }
        ],
        "properties": {
          "coupons": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CouponResponse"
            }
          }
        }
      },
      "ErrResponse": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}