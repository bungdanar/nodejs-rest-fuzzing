{
  "openapi": "3.0.3",
  "info": {
    "title": "RESTful API for Fuzzing",
    "version": "1.0",
    "description": "OpenAPI spec for Experimental RESTful API for Fuzzing",
    "contact": {
      "name": "Danar Gumilang Putera",
      "email": "danar.g.putera@gmail.com",
      "url": "https://github.com/bungdanar/nodejs-rest-fuzzing"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/license/mit/"
    }
  },
  "servers": [
    {
      "url": "http://localhost:5000/api",
      "description": "Experimental RESTful API Server for Fuzzing"
    }
  ],
  "externalDocs": {
    "url": "https://github.com/bungdanar/nodejs-rest-fuzzing",
    "description": "Experimental RESTful API Server Written in NodeJs"
  },
  "paths": {
    "/product": {
      "post": {
        "tags": [
          "Product"
        ],
        "summary": "Create New Product",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "sku",
                  "regular_price",
                  "discount_price",
                  "quantity",
                  "description",
                  "weight",
                  "note"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 255
                  },
                  "sku": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 255
                  },
                  "regular_price": {
                    "type": "number",
                    "format": "float",
                    "minimum": 0
                  },
                  "discount_price": {
                    "type": "number",
                    "format": "float",
                    "minimum": 0
                  },
                  "quantity": {
                    "type": "integer",
                    "format": "int32",
                    "minimum": 0,
                    "maximum": 9999
                  },
                  "description": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 1000
                  },
                  "weight": {
                    "type": "number",
                    "format": "float",
                    "minimum": 0,
                    "maximum": 1000
                  },
                  "note": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 255
                  },
                  "published": {
                    "type": "boolean",
                    "default": false
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successfully create new product",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ProductResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string"
          },
          "sku": {
            "type": "string"
          },
          "regular_price": {
            "type": "number",
            "format": "float"
          },
          "discount_price": {
            "type": "number",
            "format": "float"
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          },
          "description": {
            "type": "string"
          },
          "weight": {
            "type": "number",
            "format": "float"
          },
          "note": {
            "type": "string"
          },
          "published": {
            "type": "boolean"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "ErrResponse": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}